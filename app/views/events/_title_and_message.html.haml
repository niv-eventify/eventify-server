- if event.design.is_seperated_title?
  .title-holder{:style => stage2_title_css(event)}
    #title.title
      != event.name
.msg-holder{:style => stage2_message_css(event)}
  - if !event.design.is_seperated_title? 
    #title.title{:style => stage2_title_css(event)}
      != event.name
  #free_text.free_text{:style => stage2_free_text_css(event)}
    != (h(event.guest_message) || "").gsub("\n", "<br/>")
.crop_preview{:style => "#{crop_preview_css}position:absolute;overflow:hidden;direction:ltr;z-index:1"}

