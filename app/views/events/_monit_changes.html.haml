  jQuery(function(){

    var real_value = function(o) {
      return (o.val() == o.attr("def_value") ? "" : o.val());
    }

    var current_values = function() {
      return [
        stage2.starting_at().toString(), 
        stage2.ending_at().toString(),
        real_value(jQuery("[name=event[location_name]]")),
        real_value(jQuery("[name=event[location_address]]"))
      ];
    };

    function eql_array(a1, a2) {
      var l = a1.length;
      for (var i=0; i<l; i++) {
        if (a1[i] != a2[i]) {
          return false;
        }
      }
      return true;
    }
  
    var old_values = current_values();

    window.show_resend_invitations = function() {
      return !eql_array(old_values, current_values());
    }
  });
