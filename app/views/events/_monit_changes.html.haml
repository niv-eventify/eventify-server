  jQuery(function(){

    window.show_resend_invitations = false;

    var current_values = function() {
      return [
        stage2.starting_at().toString(), 
        stage2.ending_at().toString(),
        jQuery("[name=event[location_name]]").val(),
        jQuery("[name=event[location_address]]").val()
      ];
    };

    function eql_array(a1, a2) {
      var l = a1.length;
      for (var i=0; i<l; i++) {
        if (a1[i] != a2[i]) {
          return false;
        }
      }
      return true;
    }
  
    var old_values = current_values();

    var monit = function(){
      if (eql_array(old_values, current_values())) {
        setTimeout(monit, 200);
        return;
      }
      window.show_resend_invitations = true;
    }
    setTimeout(monit, 200);
  });
