.toolbar
  .toolbar-bg
    %strong.toolbar-logo
      != link_to "Eventify", "/", :target => "_blank"
    - if @movie.blank?
      != link_to content_tag(:span, _("Event Details")), rsvp_path(resource.email_token, :more => true), :class => "t-b-btn t-b-btn-1"
    -else
      != link_to content_tag(:span, _("Play Again")), "#", :class => "t-b-btn t-b-btn-1 play-movie"
    != link_to content_tag(:span, _("to Calendar")), rsvp_ical_path(resource.email_token, :convert => true), :class => "t-b-btn t-b-btn-2"
    - if resource.event.map && !resource.event.map.url.blank?
      != link_to content_tag(:span, _("Map")), resource.event.map.url, :class => "t-b-btn t-b-btn-3", :target => "_blank"
    - elsif !resource.event.map_link.blank?
      != link_to content_tag(:span, _("Map")), resource.event.map_link, :class => "t-b-btn t-b-btn-3", :target => "_blank"
    - if resource.rsvp
      != link_to content_tag(:span, _("RSVPS")), rsvp_path(resource.email_token, :more => true), :class => "t-b-btn t-b-btn-4"
    - else
      %a{:href => "#rsvps_dialog", :id => "rsvps_dialog_opener", :class => "t-b-btn t-b-btn-4"}
        %span= _("RSVPS")
