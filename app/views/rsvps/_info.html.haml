.content-box
  .holder
    .frame
      .content-box-holder
        .image-holder
          != image_tag(resource.event.design.preview.url(:stage2))
          / %img{ :src => "images/img-ill-6-en.jpg", :height => "395", :alt => "image", :width => "587" }
          .text-box
            %h2= resource.event.name
            %ul.list-1
              - unless resource.event.location_name.blank?
                %li= resource.event.location_name
              %li= resource.event.starting_at.to_s(:isra_date_time)
              - unless resource.event.location_address.blank?
                %li= resource.event.location_address
            - unless resource.event.guest_message.blank?
              %p= resource.event.guest_message
        
        %h3= resource.name
        %dl.d-list
          - unless resource.event.location_name.blank?
            %dt= _("Where:")
            %dd= resource.event.location_name

          %dt= _("When:")
          %dd= resource.event.starting_at.to_s(:isra_date_time)

          - unless resource.event.location_address.blank?
            %dt= _("Address:")
            %dd
              %span= resource.event.location_address
              != link_to_function _("show map"), "alert('todo')"
