%div{:style => "width: 667px"}
  :javascript
    jQuery(function(){
      if(typeof stage1 == "undefined") {
        //prevent weird animation in categories pages when clicking zoom.
        $.nyroModalSettings({
          minWidth: 667,
          minHeight: 510
        });
      } else {
        //in change_design (stage 1), make sure the size is correct when clicking zoom
        $.nyroModalSettings({
          width: 675,
          minHeight: 510
        });
      }
    });
  != image_tag(@design.preview.url(:lightbox))
  %div{:style => "width: 667px"}
    != update_design_link(@event, @design, @category, "blue-btn-mdl")
    - unless @design.designer.blank?
      != link_to _("Designer's Page"), show_designer_path(@design.designer.friendly_url),:class => "designer_link_zoom"
    != design_zoomout(@event, @design, @category)