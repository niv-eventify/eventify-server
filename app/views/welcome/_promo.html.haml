- content_for(:head) do
  != stylesheet_link_tag "contentflow_src"
  != javascript_include_tag "contentflow", "carousel"
.promo
  .promo-t
    .promo-b
      #carouselImgBox.img-box
        #carousel-img-box-t.img-box-t
          #carousel-img-box-b.img-box-b
            .content-h
              #imageHolder.image
                %a{ :id => "carousel_active" }
                  != image_tag('/images/emptyCarousel.png', :alt => "")
            != select_carousel_link
      #carouselWrapper

      .promo-nav
        != link_to_function _("Prev"), "", :class => "prev"
        .promo-nav-h
          %ul
            - all_enabled_categories.each do |c|
              %li
                != link_to_function(c.name, "", :class => "category_chooser", :id => "category_chooser#{c.id}")
        != link_to_function _("Next"), "", :class => "next"
