- popup_title(_("New Reminder to Guests"))

- form_remote_for :reminder, resource, :builder => InlineErrorFormBuilder::Builder, :html => {:class => "download-form upload-form form"}, :url => event_reminders_path(@event) do |f|
  != render(:partial => "reminders/form", :locals => {:f => f})
  != f.submit _("Save")
  != link_to_function _("Cancel"), "jQuery.nyroModalRemove();"