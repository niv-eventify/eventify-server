%div[reminder]
  != reminder_info(reminder)
  != link_to_remote _("remove"), :url => event_reminder_path(@event, reminder), :method => :delete, :confirm => _("Are you sure?")
  - unless reminder.reminder_sent_at.nil?
    != link_to _("edit"), edit_event_reminder_path(@event, reminder), :class => "nyroModal"
