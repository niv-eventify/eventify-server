- unless logged_in?
  %ul.subnav
    %li.btn-1
      != login_register_button(_("Register"))
      .menu-list
        .top
        .mid
          .inner
            .inner-box
              .bg-t
              #register_form.bg-m
                != render(:partial => "users/new")
              .bg-b
        .btm
    %li.btn-2
      != login_register_button(_("Login"))
      .menu-list
        .top
        .mid
          .inner
            .inner-box
              .bg-t
              #login_form.bg-m
                != render(:partial => "user_session/new")
              .bg-b
        .btm
- else
  .personal-menu-w
    .personal-menu
      .personal-menu-c
        != link_to _("Exit"), user_session_path, :method => :delete, :class => "exit"
        %strong= _("Hello, %{user}") % {:user => current_user.name}

        - if current_user.activated_at
          %p
            = _("Next event")
            != link_to_function "todo", "alert('todo')"
          .personal-menu-h
            .personal-menu-h-frame
              .opener!= link_to_function(_("My Page"), "jQuery('.menu-list').toggle()")
              %ul.menu-list
                %li!= link_to _("Contacts"), contacts_path
                %li!= link_to content_tag(:strong, _("Events")), events_path
                %li!= link_to _("Profile"), profile_path
        - else
          %p &nbsp;
      .personal-menu-b &nbsp;