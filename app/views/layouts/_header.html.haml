#header
  .header-area
    %strong.logo
      %a{ :href => "/" }
        Eventify
    .search-form
      %form{ :action => "#" }
        %fieldset
          %input.search-btn{ :src => "/images/ico-search-en.gif", :type => "image" }
          .input-bg
            %input.text{ :value => "lorem", :type => "text" }
    %ul#top-nav
      != render(:partial => "layouts/top_categories")
      %li
        %a{ :href => "#" }= _("FAQ")
      - (FastGettext.available_locales - ["ru"]).each do |locale|
        - if current_locale != locale
          %li
            != link_to AVAILABLE_LOCALE_NAMES[locale], locale_url_for(locale)

    != render(:partial => "layouts/user_menu")
    - unless logged_in?
      != link_to _("Sign Up"), signup_path, :class => "signup-out"
    - else
      != link_to _("Sign Out"), user_session_path, :method => :delete, :class => "signup-out"
