#header
  .header-area
    %strong.logo
      %a{:href => "/", :title => _("Online invitations and guests managements")}
        Eventify
    .search-form
    %ul#top-nav
      != render(:partial => "layouts/top_categories")
      %li!= link_to _("FAQ"), page_path("faq"), :class => "top"
      %li!= link_to _("Online Invitations"), "/online-invitations", :class => "top"
    - unless @skip_header
      .top-user-menu
        != render(:partial => "layouts/user_menu")
    %div
      %ul.lang
        - unless @disable_language_change
          - (FastGettext.available_locales - ["ru"]).each do |locale|
            %li!= link_to(AVAILABLE_LOCALE_NAMES[locale], locale_url_for(locale))
        %li.home_page!= link_to _("Home Page"), "/"
