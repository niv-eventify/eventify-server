%thead
  %tr
    %td.t-col-1
      .head-cell
        %label{ :for => "name" }= _("Name")
    %td.t-col-2
      .head-cell
        %span= _("Email")
    %td.t-col-3
      .head-cell
        %span= _("Cellular")
    %td.t-col-4-short
      .head-cell
        %span= _("Status")
    %td.t-col-4a-short
      .head-cell
        %span= _("Number of Guests")
    %td.t-col-5
      .head-cell
        %span.info= _("Send via")
        - if check_all
          %input.select_all_emails.input-check{ :type => "checkbox" }
        %label.l-email{ :for => "email" }= _("Email")
    %td.t-col-6
      .head-cell
        %span.info= _("Send via")
        - if check_all
          %input.select_all_sms.input-check{ :type => "checkbox" }
        %label.l-text{ :for => "text" }= _("Text/SMS")
    %td.last
      .head-cell
        %span &nbsp;